<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/startBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:onClick="resumeReadings"
        android:text="@string/startBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/pauseBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:onClick="pauseReadings"
        android:text="@string/pauseBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/startBtn" />

    <TextView
        android:id="@+id/directionTxt"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/shakeTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/angleTxt"
        tools:text="Direction: NaN" />

    <TextView
        android:id="@+id/sickTxt"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lightTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weatherTxt"
        tools:text="Sick: NaN" />

    <TextView
        android:id="@+id/soundTxt"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sleepTxt"
        tools:text="Sound: NaN" />

    <TextView
        android:id="@+id/lightTxt"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sickTxt"
        tools:text="Light: NaN" />

    <TextView
        android:id="@+id/sleepTxt"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lightTxt"
        tools:text="Sleep: NaN" />

    <TextView
        android:id="@+id/angleTxt"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/directionTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Angle: NaN" />

    <TextView
        android:id="@+id/temperatureTxt"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/weatherTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shakeTxt"
        tools:text="Temperature: NaN" />

    <TextView
        android:id="@+id/weatherTxt"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/sickTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperatureTxt"
        tools:text="Weather: NaN" />

    <TextView
        android:id="@+id/shakeTxt"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/temperatureTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/directionTxt"
        tools:text="Shake: NaN" />

</androidx.constraintlayout.widget.ConstraintLayout>